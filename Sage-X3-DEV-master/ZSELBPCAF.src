##################################################### ZSELBPCAF
##################################################### créé le 27/03/2020
##################################################### modifié le 27/03/2020

###################################################################################### ACTION
$ACTION
#Infbox ACTION
Case ACTION
 When "SEL_TABLE" : Gosub SEL_TABLE
 When Default
Endcase
Return

###################################################################################### SEL_TABLE
$SEL_TABLE
#  Infbox PARAM(1)
  If clalev([F:ZSCAF])=0 : Local File ZSELBPCAF [F:ZSCAF] : Endif
  Raz CRITERE
  #On défini la table par défaut, celle qui va servir pour la sélection
  Default File [F:ZSCAF]
  #On défini le nombre de colonne de la fenêtre de sélection
  NBCOL = 8
  #On défini le nom de chaque colonne
  TIT(1) = "code client"
  TIT(2) = "Client"
  TIT(3) = "Adresse 1"
  TIT(4) = "Adresse 2"
  TIT(5) = "CP"
  TIT(6) = "Ville"
  TIT(7) = "Pays"
  TIT(8) = "Téléphone"
  #On défini les champs à afficher
  COL(1) = "BPCNUM"
  COL(2) = "BPCNAM"
  COL(3) = "BPAADDLIG(0)"
  COL(4) = "BPAADDLIG(1)"
  COL(5) = "POSCOD"
  COL(6) = "CTY"
  COL(7) = "CRYNAM"
  COL(8) = "TEL"
  #On indique le titre de la sélection
  TIT(0) = "Sélection d'un client"
  START = "BPCNUM"
  #On indique au système de gérer les pages
  DEFPAG = 1
  #Critère de sélection
  If(PARAM(1)<>"")Then
    CRITERE = PARAM(1)
  Endif
  #Trier
  ORDRE = "BPCNUM"
  #Ordre Décroissant
  #SENS = 2
  ORDCHO="BPCNUM"
  EXPSTART="BPCNUM>=''"
Return
