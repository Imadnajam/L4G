##################################################### ZSELCLTHP
##################################################### créé le 26/09/2019
##################################################### modifié le 26/09/2019

###################################################################################### ACTION
$ACTION
#Infbox ACTION
Case ACTION
 When "SEL_TABLE" : Gosub SEL_TABLE
 When Default
Endcase
Return

###################################################################################### SEL_TABLE
$SEL_TABLE
#PARAM(1) est le code du client
#Infbox "Paramètre n°1 : " + PARAM(1)
  #Ouverture du fichier des chauffeurs de chargeur
  If clalev([F:ZSCHP])=0 : Local File ZSELCHP [ZSCHP] : Endif
  #Ouverture de la table des utilisateurs
  If clalev([F:AUS])=0 : Local File AUTILIS [AUS] : Endif
  #On va maintenant récupérer le champ ZACTLSENS de l'utilisateur
  Local Integer WAFFCLTSENS : WAFFCLTSENS=1
  Read[F:AUS]CODUSR=GUSER
  If(fstat=0)Then
    WAFFCLTSENS = [F:AUS]ZACTLSENS
  Endif
  #On va récupérer les chauffeurs du code clients
  #passés en paramètre
  Local Char WCODCHG(30) : WCODCHG = PARAM(1)
  Default File [ZSCHP]
  #On défini le nombre de colonne de la fenêtre de sélection
  NBCOL = 7
  #On défini le nom de chaque colonne
  TIT(1) = "Code du client"
  TIT(2) = "Raison sociale"
  TIT(3) = "Adresse"
  TIT(4) = "CP"
  TIT(5) = "Ville"
  TIT(6) = "Téléphone"
  TIT(7) = "Fax"
  #On défini les champs à afficher
  COL(1) = "ZCODCLT"
  COL(2) = "ZNOMCLT"
  COL(3) = "ZADRESSE"
  COL(4) = "ZPOSCOD"
  COL(5) = "ZCITY"
  COL(6) = "ZTEL"
  COL(7) = "ZFAX"
  #On indique le titre de la sélection
  TIT(0) = "Sélection du client du chargeur " + PARAM(1)
  #On indique au système de gérer les pages
  DEFPAG = 1
  #Critère de sélection
  If(WAFFCLTSENS=2)Then
    CRITERE = "[F:ZSCHP]ZCODCHG='" + WCODCHG + "'"
  Else
    CRITERE = "[F:ZSCHP]ZCLTSENSIBLE<>2 & [F:ZSCHP]ZCODCHG='" + WCODCHG + "'"
  Endif
  #Trier
  ORDRE = "ZCODCHG;ZCODCLT"
  #Ordre Croissant
  #SENS = 1
  #EXPSTART = "[F:ZSCHP]ZCODCLT='ST'"
Return

